<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">
  
  <interceptors>

    <interceptor>
      <interceptor-class>org.devilry.core.authorize.AuthorizeNode</interceptor-class>
      <around-invoke>
	<method-name>auth</method-name>
      </around-invoke>
    </interceptor>
    
    <interceptor>
      <interceptor-class>org.devilry.core.authorize.AuthorizeCourseNode</interceptor-class>
      <around-invoke>
	<method-name>auth</method-name>
      </around-invoke>
    </interceptor>

    <interceptor>
      <interceptor-class>org.devilry.core.authorize.AuthorizePeriodNode</interceptor-class>
      <around-invoke>
	<method-name>auth</method-name>
      </around-invoke>
    </interceptor>
    
    <interceptor>
      <interceptor-class>org.devilry.core.authorize.AuthorizeAssignmentNode</interceptor-class>
      <around-invoke>
	<method-name>auth</method-name>
      </around-invoke>
    </interceptor>
    
    <interceptor>
      <interceptor-class>org.devilry.core.authorize.AuthorizeDelivery</interceptor-class>
      <around-invoke>
	<method-name>auth</method-name>
      </around-invoke>
    </interceptor>

  </interceptors>
  
  <assembly-descriptor>
    <interceptor-binding>
      <ejb-name>org.devilry.core.dao.NodeImpl</ejb-name>
      <interceptor-class>org.devilry.core.authorize.AuthorizeNode</interceptor-class>
    </interceptor-binding>

    <interceptor-binding>
      <ejb-name>org.devilry.core.dao.CourseNodeImpl</ejb-name>
      <interceptor-class>org.devilry.core.authorize.AuthorizeCourseNode</interceptor-class>
    </interceptor-binding>

    <interceptor-binding>
      <ejb-name>org.devilry.core.dao.PeriodNodeImpl</ejb-name>
      <interceptor-class>org.devilry.core.authorize.AuthorizePeriodNode</interceptor-class>
    </interceptor-binding>
    
    <interceptor-binding>
      <ejb-name>org.devilry.core.dao.AssignmentNodeImpl</ejb-name>
      <interceptor-class>org.devilry.core.authorize.AuthorizeAssignmentNode</interceptor-class>
    </interceptor-binding>
    
  </assembly-descriptor>
</ejb-jar>
